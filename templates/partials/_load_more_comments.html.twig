{% for comment in comments %}
    {% set user = comment.user %}
    <div class="card mb-4 shadow-sm">
        <div class="card-body py-3">
            <div class="media">
                <div class="media-body">
                    <h5 class="mt-0">
                        <span class="text-danger">{{ user.username }}</span>
                        <span class="small text-muted">le {{ comment.createdAt | date('d/m/Y') }} Ã  {{ comment.createdAt | date('H:i') }}</span>
                        {% if app.user and app.user.id == comment.user.id %}
                        {{ include('comment/_delete_form.html.twig') }}
                        {% endif %}
                    </h5>
                    {{ comment.content }}
                </div>
            </div>
        </div>
    </div>
{% endfor %}
