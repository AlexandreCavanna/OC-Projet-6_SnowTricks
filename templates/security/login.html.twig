{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container flex-grow-1">
        <div class="row mt-4 justify-content-center">
            <div class="col-8 align-self-center">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">Mot de passe invalide.</div>
                    {% endif %}

                    <h1>Connexion</h1>
                    <div class="form-group mb-3">
                        <label for="inputEmail">Adresse email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                               class="form-control" autocomplete="email" placeholder="Entrer votre adresse email"
                               required autofocus>
                    </div>
                    <div class="form-group mb-3">
                        <label for="inputPassword">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control"
                               autocomplete="current-password" placeholder="Entrer votre mot de passe" required>
                    </div>
                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >
                    <div class="form-group checkbox mb-3">
                        <label>
                            <input type="checkbox" id="remember_me" name="_remember_me"> Se souvenir de moi
                        </label>
                    </div>
                    <a class="d-block mb-2" href="{{ path('register') }}">S'inscrire ?</a>
                    <a class="d-block mb-4" href="{{ path('forgot_password') }}">Mot de passe oubli√© ?</a>
                    <button class="btn btn-lg btn-primary" type="submit">
                        Se connecter
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('toast') }}
{% endblock %}
